<UserControl x:Class="KmyKeiba.Views.Controls.RaceResultAllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:KmyKeiba.Behaviors"
             xmlns:uc="clr-namespace:KmyKeiba.Views.Controls"
             xmlns:up="clr-namespace:KmyKeiba.Views.Parts"
             xmlns:local="clr-namespace:KmyKeiba.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="Root">
  <Grid Grid.Column="1" Margin="8,0,0,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <RadioButton Grid.Column="0" Style="{DynamicResource TabBar}" GroupName="{Binding UniqueId3,ElementName=Root}"
                       Content="着順" Name="S_RaceResultOrderList"/>
      <RadioButton Grid.Column="1" Style="{DynamicResource TabBar}" GroupName="{Binding UniqueId3,ElementName=Root}"
                       Content="レース傾向" Name="S_RaceResultTrend"/>
      <RadioButton Grid.Column="2" Style="{DynamicResource TabBar}" GroupName="{Binding UniqueId3,ElementName=Root}"
                       Content="展開" Name="S_RaceResultSituation"/>
    </Grid>

    <Grid Grid.Row="1">

      <!-- 傾向 -->
      <Grid Margin="0,8,4,0" Visibility="{Binding IsChecked,ElementName=S_RaceResultTrend,Converter={StaticResource BooleanVisibilityConv}}">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--左側のサイドメニュー-->
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
          </Grid.RowDefinitions>

          <WrapPanel Orientation="Horizontal" Width="180">
            <WrapPanel.Resources>
              <Style TargetType="ToggleButton" BasedOn="{StaticResource ToggleButtonDefault}">
                <Setter Property="Width" Value="60"/>
                <Setter Property="Height" Value="30"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="0"/>
              </Style>
            </WrapPanel.Resources>
            <ToggleButton Content="コース" IsChecked="True"/>
            <ToggleButton Content="馬場状態"/>
            <ToggleButton Content="レース名"/>
            <ToggleButton Content="格"/>
            <ToggleButton Content="時刻"/>
            <ToggleButton Content="季節"/>
          </WrapPanel>

          <ScrollViewer Grid.Row="1" Margin="0,8,0,0">
            <StackPanel>
              <StackPanel.Resources>
                <Style TargetType="RadioButton" BasedOn="{StaticResource ToggleButtonDefault}">
                  <Setter Property="Width" Value="180"/>
                  <Setter Property="Height" Value="60"/>
                  <Setter Property="GroupName" Value="{Binding UniqueId4,ElementName=Root}"/>
                </Style>
                <Style TargetType="StackPanel" x:Key="ButtonContent">
                  <Setter Property="Width" Value="160"/>
                </Style>
              </StackPanel.Resources>
              <RadioButton>
                <StackPanel Style="{StaticResource ButtonContent}">
                  <TextBlock FontSize="16" Text="スピード"/>
                  <TextBlock FontSize="24" FontWeight="Bold" Text="並み"/>
                </StackPanel>
              </RadioButton>
              <RadioButton>
                <StackPanel Style="{StaticResource ButtonContent}">
                  <TextBlock FontSize="16" Text="脚質"/>
                  <TextBlock FontSize="24" FontWeight="Bold" Text="並み"/>
                </StackPanel>
              </RadioButton>
            </StackPanel>
          </ScrollViewer>
        </Grid>
      </Grid>

      <!-- 展開 -->
      <ScrollViewer Margin="0,8,4,8" Visibility="{Binding IsChecked,ElementName=S_RaceResultSituation,Converter={StaticResource BooleanVisibilityConv}}">
        <StackPanel>
          <!--<cef:ChromiumWebBrowser x:Name="Browser" Address="https://google.co.jp"/>-->
          <ItemsControl ItemsSource="{Binding Race.Corners,ElementName=Root}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <uc:RaceCornerView RaceCorner="{Binding}"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          <TextBlock Text="結果" FontSize="26" Margin="0,32,0,0"/>
          <skia:SKElement>
            <i:Interaction.Behaviors>
              <b:DisplayImageBehavior Image="{Binding Race.ResultMap,ElementName=Root}"/>
            </i:Interaction.Behaviors>
          </skia:SKElement>
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>
</UserControl>
