<UserControl x:Class="KmyKeiba.Views.Controls.RaceResultAllView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:KmyKeiba.Behaviors"
             xmlns:uc="clr-namespace:KmyKeiba.Views.Controls"
             xmlns:up="clr-namespace:KmyKeiba.Views.Parts"
             xmlns:local="clr-namespace:KmyKeiba.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="Root">
  <Grid Grid.Column="1" Margin="8,0,0,0">
    <Grid.RowDefinitions>
      <RowDefinition Height="auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <RadioButton Grid.Column="0" Style="{DynamicResource TabBar}" GroupName="{Binding UniqueId3,ElementName=Root}"
                       Content="着順" Name="S_RaceResultOrderList"/>
      <RadioButton Grid.Column="1" Style="{DynamicResource TabBar}" GroupName="{Binding UniqueId3,ElementName=Root}"
                       Content="レース傾向" Name="S_RaceResultTrend"/>
      <RadioButton Grid.Column="2" Style="{DynamicResource TabBar}" GroupName="{Binding UniqueId3,ElementName=Root}"
                       Content="展開" Name="S_RaceResultSituation"/>
    </Grid>

    <Grid Grid.Row="1">

      <!-- 傾向 -->
      <Grid Margin="0,8,4,0" Visibility="{Binding IsChecked,ElementName=S_RaceResultTrend,Converter={StaticResource BooleanVisibilityConv}}">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto"/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--傾向分析コントロール-->
        <uc:TrendAnalyzerView Selector="{Binding Race.TrendAnalyzers,ElementName=Root}"/>

        <ScrollViewer Grid.Column="1">
          <StackPanel Margin="8,0,0,0">
            
            <!--パラメータ-->
            <ItemsControl ItemsSource="{Binding Race.TrendAnalyzers.CurrentAnalyzer.Value.Parameters,ElementName=Root}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <WrapPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Grid Margin="0,0,0,8" Visibility="{Binding IsActive.Value,Converter={StaticResource BooleanVisibilityConv}}">
                    <Grid.RowDefinitions>
                      <RowDefinition/>
                      <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="180"/>
                      <ColumnDefinition Width="180"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontSize="32" Text="{Binding Value}" FontWeight="Bold" TextAlignment="Center"
                               Grid.RowSpan="2"/>
                    <TextBlock FontSize="20" Text="{Binding Name}" VerticalAlignment="Center"
                               Grid.Column="1"/>
                    <TextBlock FontSize="14" Text="{Binding Comment}"
                               Grid.Column="1" Grid.Row="1"/>
                  </Grid>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--過去レースの一覧-->
            <StackPanel Orientation="Horizontal" Margin="0,16,0,8">
              <StackPanel.Resources>
                <Style TargetType="TextBlock">
                  <Setter Property="Foreground" Value="{DynamicResource SubForeground}"/>
                  <Setter Property="FontSize" Value="16"/>
                </Style>
              </StackPanel.Resources>
              <TextBlock Text="レース名" Width="180"/>
              <TextBlock Text="1着タイム" Width="80"/>
              <TextBlock Text="タイム/m" Width="80"/>
            </StackPanel>
            <ItemsControl ItemsSource="{Binding Race.TrendAnalyzers.CurrentAnalyzer.Value.Source,ElementName=Root}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <Label Content="{Binding Subject.DisplayName}" FontSize="16" FontWeight="Bold" Width="180"/>
                    <Label Content="{Binding TopHorse.ResultTime,Converter={StaticResource StringFormatConv},ConverterParameter=mm\\:ss}" FontSize="16" Width="80"/>
                    <Label Content="{Binding ResultTimePerMeter,Converter={StaticResource StringFormatConv},ConverterParameter=F4}" FontSize="16" Width="80"/>
                  </StackPanel>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </StackPanel>
        </ScrollViewer>

      </Grid>

      <!-- 展開 -->
      <ScrollViewer Visibility="{Binding IsChecked,ElementName=S_RaceResultSituation,Converter={StaticResource BooleanVisibilityConv}}">
        <StackPanel Margin="0,8,4,8">
          <!--<cef:ChromiumWebBrowser x:Name="Browser" Address="https://google.co.jp"/>-->
          <ItemsControl ItemsSource="{Binding Race.Corners,ElementName=Root}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <uc:RaceCornerView RaceCorner="{Binding}"/>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
          <TextBlock Text="結果" FontSize="26" Margin="0,32,0,0"/>
          <skia:SKElement>
            <i:Interaction.Behaviors>
              <b:DisplayImageBehavior Image="{Binding Race.ResultMap,ElementName=Root}"/>
            </i:Interaction.Behaviors>
          </skia:SKElement>
        </StackPanel>
      </ScrollViewer>
    </Grid>
  </Grid>
</UserControl>
