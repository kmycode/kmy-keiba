<UserControl x:Class="KmyKeiba.Views.Controls.RaceCornerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:skia="clr-namespace:SkiaSharp.Views.WPF;assembly=SkiaSharp.Views.WPF"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:b="clr-namespace:KmyKeiba.Behaviors"
             xmlns:local="clr-namespace:KmyKeiba.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="Root">
  <StackPanel HorizontalAlignment="Left">
    <TextBlock FontSize="16">
      <Run FontWeight="Bold" FontSize="24" Text="{Binding RaceCorner.Number,ElementName=Root}"/>周
      第<Run FontWeight="Bold" FontSize="24" Text="{Binding RaceCorner.Position,ElementName=Root}"/>コーナー　　LAP <Run
        Text="{Binding RaceCorner.LapTime,ElementName=Root,Converter={StaticResource StringFormatConv},ConverterParameter=mm\\:ss}"
        FontSize="24" FontWeight="Bold"/>
    </TextBlock>
    <skia:SKElement>
      <i:Interaction.Behaviors>
        <b:DisplayImageBehavior Image="{Binding RaceCorner.Image,ElementName=Root}"/>
      </i:Interaction.Behaviors>
    </skia:SKElement>
  </StackPanel>
</UserControl>
