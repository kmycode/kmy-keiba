      </StackPanel>
      <vc:BindableScrollViewer Grid.Row="2"
                               ScrollY="{Binding VerticalScroll.Value,Mode=TwoWay}">
        <ItemsControl Grid.Row="1" ItemsSource="{Binding Rider.Value.RecentRaces}"
                      ItemTemplate="{StaticResource HorseGradeTemplate}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel/>
            </ItemsPanelTemplate>
